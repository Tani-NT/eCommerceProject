<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet"/>
</head>
<body>
    <%- include('./partials/header') %>

        <% if (success && success.length > 0) { %>
            <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
                <% success.forEach(message => { %>
                    <p class="inline-block mt-1 mb-1 text-white">
                        <%= message %>
                    </p>
                <% }); %>
            </div>
        <% } %>

        <div class="w-full h-screen flex items-start px-14 py-20">
            <div class="w-[20%] flex h-screen flex-col items-start">
                <div class="flex items-center gap-2">
                    <h3>sort by</h3>
                    <form action="/shop">
                        <select class="border-[1px] px-2 py-1" name="sortby" id="">
                            <option value="popular">Popular</option>
                            <option value="newest">Newest</option>
                        </select>
                    </form>
                </div>
                <div class="flex flex-col mt-20">
                    <a class="block w-fit mb-2" href="">New Collection</a>
                    <a class="block w-fit mb-2" href="">All Products</a>
                    <a class="block w-fit mb-2" href="">Discounted Products</a>
                </div>
                <div class="mt-32">
                    <a class="block w-fit mb-2" href="">Filter by :</a>
                    <a class="block w-fit mb-2" href="">Availability</a>
                    <a class="block w-fit mb-2" href="">Discount</a>
                </div>
            </div>
            <div class="w-[80%] flex flex-col gap-3 h-screen">
                <div class="flex items-start flex-wrap gap-3">
                    <% products.forEach(function(product){ %>
                        <div class="w-60 bg-zinc-300">
                            <div class="w-[22vw] flex items-center justify-center h-[55vh] bg-[<%= product.bgcolor %>]">
                                <img class="w-[80%] h-[90%] object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                            </div>
                            <div class="flex justify-between items-center bg-[<%= product.panelcolor %>] p-4 text-[<%= product.textcolor %>]">
                                <div>
                                    <h3><%= product.name %></h3>
                                    <h4>$ <%= product.price %></h4>
                                </div>
                                <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="/addtocart/<%= product._id %>">
                                    <i class="ri-add-line"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>

    <%- include('./partials/footer') %>
</body>
</html>
